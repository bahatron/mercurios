{
  "name": "mercurios",
  "version": "0.0.1",
  "description": "an event stream server",
  "author": "simonpiscitelli@gmail.com",
  "scripts": {
    "start": "pm2-runtime start process.json",
    "start:dev": "pm2-runtime start process.dev.json",
    "dev": "run-p start:dev build:watch",
    "docker:dev": "clear && docker-compose down && docker-compose up -d mysql && sleep 10 && docker-compose up -d && docker-compose logs -f server",
    "docker:test": "docker-compose -f docker-compose.test.yml up --abort-on-container-exit  || exit 1",
    "docker:build": "docker-compose build && npm run docker:test",
    "build": "tsc --project tsconfig.build.json",
    "build:watch": "npm run build -- --watch",
    "build:clean": "rm -rf dist/ && npm run build",
    "test": "npm run mocha",
    "test:perf": "./tests/performance_test.sh",
    "mocha": "mocha -b -r ts-node/register \"tests/**/*.mocha.ts\""
  },
  "dependencies": {
    "@bahatron/env": "^0.1.6",
    "@types/chai": "^4.2.0",
    "@types/express": "^4.17.0",
    "@types/helmet": "0.0.44",
    "@types/mocha": "^5.2.7",
    "@types/node": "^12.7.1",
    "@types/ws": "^6.0.2",
    "axios": "^0.19.0",
    "chai": "^4.2.0",
    "express": "^4.17.1",
    "helmet": "^3.21.0",
    "jsonschema": "^1.2.4",
    "knex": "^0.19.1",
    "mocha": "^6.2.0",
    "moment": "^2.24.0",
    "mysql2": "^1.6.5",
    "npm-run-all": "^4.1.5",
    "ts-nats": "^1.2.4",
    "ts-node": "^8.4.1",
    "typescript": "^3.6.3",
    "uuid": "^3.3.2",
    "ws": "^7.1.1"
  }
}
