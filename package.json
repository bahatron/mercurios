{
    "name": "@bahatron/mercurios",
    "version": "3.0.3",
    "description": "mercurios client",
    "main": "lib/index.js",
    "types": "lib/index.d.ts",
    "author": "simonpiscitelli@gmail.com",
    "license": "Apache-2.0",
    "scripts": {
        "prepare": "lerna bootstrap",
        "preversion": "npm run prepublishOnly",
        "prepublishOnly": "npm run build:clean && npm run test",
        "build": "tsc -p tsconfig.build.json",
        "build:watch": "npm run build -- --watch",
        "build:clean": "rm -rf dist && npm run build",
        "test": "jest --forceExit --runInBand",
        "test:ci": "npm run test -- --silent --reporters=default --reporters=jest-stare",
        "nodemon": "nodemon",
        "pm2": "pm2-runtime start process.config.js",
        "dev": "docker-compose up --abort-on-container-exit"
    },
    "dependencies": {
        "@bahatron/utils": "^2.5.0",
        "knex": "^0.95.11",
        "pg": "^8.7.1"
    },
    "devDependencies": {
        "@types/jest": "^27.0.1",
        "jest": "^27.2.5",
        "jest-stare": "^2.3.0",
        "lerna": "^4.0.0",
        "ts-jest": "^27.0.5",
        "typescript": "^4.4.4",
        "ts-node": "^10.1.0",
        "@types/express": "^4.17.13",
        "@types/morgan": "^1.9.3",
        "@types/node": "^16.3.1",
        "express": "^4.17.1",
        "morgan": "^1.10.0",
        "nodemon": "^2.0.13",
        "swagger-ui-express": "^4.1.6"
    }
}
