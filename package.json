{
    "name": "@bahatron/mercurios",
    "version": "3.0.3",
    "description": "mercurios client",
    "main": "lib/index.js",
    "types": "lib/index.d.ts",
    "author": "simonpiscitelli@gmail.com",
    "license": "Apache-2.0",
    "scripts": {
        "preversion": "npm run prepublishOnly",
        "prepublishOnly": "npm run build:clean && npm run test",
        "build": "tsc -p ./tsconfig.build.json",
        "build:watch": "npm run build -- --watch",
        "build:clean": "rm -rf dist && tsc",
        "test": "jest --forceExit --runInBand",
        "test:ts": "npm run test -- --config=jest.unit.config.js",
        "test:ci": "npm run test -- --silent --reporters=default --reporters=jest-stare",
        "playground": "pm2-runtime start process.config.js",
        "dev": "docker-compose up --abort-on-container-exit"
    },
    "dependencies": {
        "@bahatron/utils": "^2.5.0",
        "knex": "^0.95.11",
        "pg": "^8.7.1"
    },
    "devDependencies": {
        "@types/jest": "^27.0.1",
        "@types/node": "^14.17.22",
        "jest": "^27.2.5",
        "jest-stare": "^2.3.0",
        "ts-jest": "^27.0.5",
        "ts-node": "^9.1.1",
        "typescript": "^4.4.4"
    }
}
