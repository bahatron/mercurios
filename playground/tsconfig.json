{
    "compilerOptions": {
        "strict": true,
        "outDir": "lib",
        "target": "es2019",
        "sourceMap": true,
        "declaration": true,
        "incremental": true,
        "skipLibCheck": true,
        "skipDefaultLibCheck": true,
        "module": "commonjs",
        "esModuleInterop": true,
        "moduleResolution": "node"
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules",
        "lib"
    ]
}