#!/usr/bin/node

const http = require("http");
const $env = require("@bahatron/env").default;
const expressServer = require("../dist/http/server").default;
const $logger = require("../dist/services/logger").default;
const createWsServer = require("../dist/websocket/server").default;

const PORT = parseInt($env.get("PORT", "3000"));

const httpServer = new http.Server(expressServer);

const wsServer = createWsServer(httpServer);

$logger.debug("debug mode on");

wsServer.on("listening", () => {
    $logger.info(`Webscoket server listening`);
});

httpServer.on("listening", () => {
    $logger.info(`Http server listening on port ${PORT}`);
});

httpServer.on("error", err => {
    $logger.error(`Http server error: ${err.message}`);
});

httpServer.listen(PORT);
