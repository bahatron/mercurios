{
    "compilerOptions": {
        "target": "es2019",
        "moduleResolution": "node",
        "module": "CommonJS",
        "esModuleInterop": true,
        "removeComments": true,
        "incremental": true,
        "sourceMap": true,
        "outDir": "dist",
        "strict": true,
        "skipLibCheck": true
    },
    "include": ["src"],
    "exclude": ["node_modules", "dist"]
}
