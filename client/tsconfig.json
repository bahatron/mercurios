{
    "compilerOptions": {
        "target": "es6",
        "module": "CommonJS",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "declaration": true,
        "incremental": true,
        "sourceMap": true,
        "outDir": "lib",
        "strict": true,
        "skipLibCheck": true
    },
    "include": [
        "src",
    ],
    "exclude": [
        "node_modules",
        "lib"
    ]
}