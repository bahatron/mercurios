{
    "compilerOptions": {
        "target": "es2019",
        "module": "commonjs",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "removeComments": true,
        "declaration": true,
        "diagnostics": true,
        "incremental": true,
        "sourceMap": true,
        "outDir": "dist",
        "strict": true,
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}